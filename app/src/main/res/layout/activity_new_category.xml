<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ben.cole.howmuch.NewCategoryActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categoryNameEntry"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/category_name_hint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/colour_label_text"
        android:id="@+id/colourText"
        android:layout_below="@+id/categoryNameEntry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="@dimen/colour_preview_size_large"
        android:layout_height="@dimen/colour_preview_size_large"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/colourPreviewArea"
        android:layout_below="@+id/colourText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="R"
        android:id="@+id/redLabel"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/redInput"
        android:layout_toStartOf="@+id/redInput" />

    <SeekBar
        android:layout_width="@dimen/colour_value_slider_width"
        android:layout_height="wrap_content"
        android:id="@+id/redInput"
        android:layout_alignTop="@+id/redLabel"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:max="255"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/blueValueOutput"
        android:layout_alignTop="@+id/blueInput"
        android:layout_toRightOf="@+id/blueInput"
        android:layout_toEndOf="@+id/blueInput" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="G"
        android:id="@+id/greenLabel"
        android:layout_alignTop="@+id/greenInput"
        android:layout_toLeftOf="@+id/greenInput"
        android:layout_toStartOf="@+id/greenInput" />

    <SeekBar
        android:layout_width="@dimen/colour_value_slider_width"
        android:layout_height="wrap_content"
        android:id="@+id/greenInput"
        android:indeterminate="false"
        android:max="255"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_below="@+id/redInput"
        android:layout_toLeftOf="@+id/greenValueOutput"
        android:layout_toStartOf="@+id/greenValueOutput" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/greenValueOutput"
        android:layout_alignTop="@+id/greenInput"
        android:layout_alignLeft="@+id/blueValueOutput"
        android:layout_alignStart="@+id/blueValueOutput" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="B"
        android:id="@+id/blueLabel"
        android:layout_below="@+id/greenInput"
        android:layout_toLeftOf="@+id/blueInput"
        android:layout_toStartOf="@+id/blueInput" />

    <SeekBar
        android:layout_width="@dimen/colour_value_slider_width"
        android:layout_height="wrap_content"
        android:id="@+id/blueInput"
        android:indeterminate="false"
        android:max="255"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_below="@+id/greenInput"
        android:layout_alignLeft="@+id/redInput"
        android:layout_alignStart="@+id/redInput" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/redValueOutput"
        android:layout_alignTop="@+id/redInput"
        android:layout_toRightOf="@+id/redInput"
        android:layout_toEndOf="@+id/redInput" />

</RelativeLayout>
