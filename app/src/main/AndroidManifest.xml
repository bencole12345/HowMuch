<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ben.cole.howmuch">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllTransactionsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EditTransactionActivity"
            android:parentActivityName=".AllTransactionsActivity" />
        <activity
            android:name=".SavingCalculationActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".NewCategoryActivity"
            android:parentActivityName=".EditTransactionActivity"/>
    </application>

</manifest>
